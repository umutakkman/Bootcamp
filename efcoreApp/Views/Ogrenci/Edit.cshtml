@model Ogrenci

<h2>Öğrenciyi Düzenle</h2>
<hr>
<form asp-controller="Ogrenci" asp-action="Edit" method="post">
    <input type="hidden" asp-for="OgrenciID">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Soyad" class="form-label"></label>
        <input asp-for="Soyad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Eposta" class="form-label"></label>
        <input asp-for="Eposta" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label"></label>
        <input asp-for="Telefon" class="form-control">
    </div>

    <button class="btn btn-secondary" type="submit">Kaydet</button>
</form>